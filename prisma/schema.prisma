generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// Exemplo de Model para Autenticação (Milestone 2)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String // O password será um hash
  name      String?
  role      String   @default("CLIENTE") // Pode ser 'CORRETOR' ou 'CLIENTE'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  imoveis   Imovel[] // Relação 1:N com Imóveis que o corretor gerencia
  sessions Session[]
}

// Exemplo de Model para o Imóvel (Milestone 2)
model Imovel {
  id          String    @id @default(uuid())
  titulo      String
  descricao   String
  preco       Float
  tipo        String    // Ex: Apartamento, Casa, Terreno
  localizacao String
  fotos Foto[] // Array de URLs de fotos (se o SQLite suportar, caso contrário use uma tabela separada)
  disponivel  Boolean   @default(true)
  
  // Relação com o Corretor que cadastrou/é responsável
  corretorId  String
  corretor    User      @relation(fields: [corretorId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Session {
  id        String   @id @default(uuid()) // O ID da sessão que vai para o cookie

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  expiresAt DateTime // Para saber quando a sessão expira
  createdAt DateTime @default(now())

  @@index([userId]) // Otimiza a busca por ID de usuário
}

model Foto {
  id String @id @default(uuid())
  url String
  princial Boolean @default(false)
  ordem Int @default(0)

  imovelId String
  imovel   Imovel @relation(fields: [imovelId], references: [id])

  createdAt DateTime @default(now())

  @@index([imovelId])
}